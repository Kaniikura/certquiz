{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,

    /* ——-- path mapping ——-- */
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      /* cross-package – point at the *package root*  */
      "@certquiz/shared": ["packages/shared/src/index.ts"],
      "@certquiz/shared/*": ["packages/shared/src/*"],
      "@certquiz/typespec/*": ["packages/typespec/src/*"],

      /* app-local aliases – point at a folder inside the app   */
      "@api/*": ["apps/api/src/*"] /* Application source code */,
      "@api/testing": ["apps/api/testing/index.ts"] /* Testing utilities convenience barrel */,
      "@api/testing/*": ["apps/api/testing/*"] /* Testing utilities root */,
      "@api/testing/infra": ["apps/api/testing/infra/index.ts"] /* Infrastructure test utilities */,
      "@api/testing/infra/*": ["apps/api/testing/infra/*"],
      "@api/testing/domain": ["apps/api/testing/domain/index.ts"] /* Domain test utilities */,
      "@api/testing/domain/*": ["apps/api/testing/domain/*"],
      "@web/*": ["apps/web/src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },

  /* project references for tsc -b */
  "references": [
    { "path": "apps/api" },
    { "path": "apps/web" },
    { "path": "packages/shared" },
    { "path": "packages/typespec" }
  ]
}
