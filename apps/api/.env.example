# API Application Environment Variables Template
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/certquiz

# Authentication & Security
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=certquiz
KEYCLOAK_CLIENT_ID=certquiz-api
# Optional â€” only needed for confidential clients
# KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
JWT_SECRET=your-jwt-secret-32-chars-minimum

# External Services
BMAC_WEBHOOK_SECRET=your-bmac-webhook-secret

# Server Configuration
API_PORT=4000
NODE_ENV=development

# Cache Configuration
CACHE_DRIVER=redis
