{
  "name": "@certquiz/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../../.env --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "start": "bun dist/index.js",
    "start:dev": "bun src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:integration": "vitest run src/**/*.integration.test.ts tests/integration/**/*.test.ts",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "typecheck": "tsc --noEmit",
    "check": "tsc --noEmit && biome check --write --unsafe",
    "check:ci": "tsc --noEmit && biome check",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:generate:test": "drizzle-kit generate --config ./drizzle.config.test.ts",
    "db:migrate": "bun --env-file=../../.env run src/system/migration/migrate.ts up",
    "db:migrate:up": "bun --env-file=../../.env run src/system/migration/migrate.ts up",
    "db:migrate:down": "bun --env-file=../../.env run src/system/migration/migrate.ts down",
    "db:migrate:status": "bun --env-file=../../.env run src/system/migration/migrate.ts status",
    "db:migrate:validate": "bun --env-file=../../.env run src/system/migration/validate.ts",
    "db:studio": "bun --env-file=../../.env drizzle-kit studio",
    "db:drop": "bun --env-file=../../.env drizzle-kit drop",
    "db:reset": "bun run db:drop && bun run db:generate && bun run db:migrate",
    "db:check": "bun --env-file=../../.env drizzle-kit check"
  },
  "dependencies": {
    "@certquiz/shared": "workspace:*",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.6.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.0",
    "jose": "^6.0.11",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.2.1",
    "@types/bun": "^1.2.18",
    "@types/pino": "^7.0.5",
    "drizzle-kit": "^0.31.1",
    "execa": "^9.6.0",
    "testcontainers": "^11.0.3",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
