{
  "name": "@certquiz/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "start": "bun dist/index.js",
    "start:dev": "bun src/index.ts",
    "test": "bun vitest run",
    "test:watch": "bun vitest watch",
    "test:unit": "bun vitest run --exclude '**/*.integration.test.ts' --exclude 'tests/integration/**/*.test.ts' --exclude 'tests/e2e/**/*.test.ts'",
    "test:integration": "bun vitest run --config tests/vitest.config.integration.ts",
    "test:e2e": "bun vitest run --config tests/vitest.config.integration.ts tests/e2e/**/*.test.ts",
    "test:coverage": "bun vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "check": "tsc --noEmit && biome check --write --unsafe",
    "check:ci": "tsc --noEmit && biome check",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push",
    "db:check": "bun drizzle-kit check",
    "db:studio": "bun drizzle-kit studio",
    "db:drop": "bun run scripts/db-drop.ts",
    "db:reset": "bun run db:seed reset",
    "db:seed": "bun run scripts/seed.ts seed",
    "db:seed:clear": "bun run scripts/seed.ts clear",
    "db:seed:reset": "bun run scripts/seed.ts reset"
  },
  "dependencies": {
    "@certquiz/shared": "workspace:*",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.6.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.0",
    "jose": "^6.0.11",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.2.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.1.0",
    "@types/pino": "^7.0.5",
    "drizzle-kit": "^0.31.1",
    "execa": "^9.6.0",
    "knip": "^5.62.0",
    "testcontainers": "^11.0.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
