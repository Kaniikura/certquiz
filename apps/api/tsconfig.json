{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDirs": ["src", "db", "tests", "scripts"],
    "types": ["node", "@types/bun"],
    "baseUrl": ".",
    "paths": {
      "@certquiz/shared": ["../../packages/shared/src/index.ts"],
      "@certquiz/shared/*": ["../../packages/shared/src/*"],
      "@api/*": ["src/*"],
      "@/test-support": ["src/test-support/index.ts"],
      "@/test-support/*": ["src/test-support/*"],
      "@test": ["tests/index.ts"],
      "@test/*": ["tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*.ts", "scripts/**/*", "*.ts", "package.json"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/shared" }]
}
