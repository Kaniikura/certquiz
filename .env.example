# Database Configuration
# Replace with your actual database credentials locally
DATABASE_URL=postgresql://username:password@localhost:5432/certquiz
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/certquiz_test

# Authentication - KeyCloak
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=certquiz

# Security
# Generate a secure JWT secret key (minimum 16 characters)
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-16-chars

# External Services
# Buy Me a Coffee webhook secret - get from BMaC dashboard
BMAC_WEBHOOK_SECRET=your-bmac-webhook-secret

# Server Configuration
API_PORT=4000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting Configuration
# Enable rate limiting (default: true in production, false in development)
RATE_LIMIT_ENABLED=false

# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Key generation type: 'ip' or 'user' (default: 'ip')
# - 'ip': Rate limit by IP address (X-Forwarded-For, CF-Connecting-IP, X-Real-IP)
# - 'user': Rate limit by authenticated user ID (requires authentication)
RATE_LIMIT_KEY_TYPE=ip